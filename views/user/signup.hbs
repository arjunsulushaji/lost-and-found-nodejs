{{#if alert}}
<script>
    alert('User already exists !')
</script>
{{/if}}

<section>
    <div class="container pt-5">
        <h3 class="pt-5 text-center">User Signup</h3>
        <form action="/signup" method="post">
            <div class="form-group">
                <label for="exampleInputPassword1">Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="" placeholder="Enter name" name="userName" required="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address <span class="text-danger">*</span></label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email" name="userEmail" required="">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                    name="userPass" required="">
            </div>
            <div class="form-row align-items-center">
                <div class="col-auto my-1">
                    <label class="mr-sm-2" for="inlineFormCustomSelect">District <span
                            class="text-danger">*</span></label>
                    <select class="custom-select mr-sm-2" id="inlineFormCustomSelect" name="userDistrict" required="">
                        <option selected>Choose...</option>
                        <option value="Kasargod">Kasargod</option>
                        <option value="Kannur">Kannur</option>
                        <option value="Wayanad">Wayanad</option>
                        <option value="Kozhikode">Kozhikode</option>
                        <option value="Malapuram">Malapuram</option>
                        <option value="Palakkad">Palakkad</option>
                        <option value="Thrissur">Thrissur</option>
                        <option value="Ernakulam">Ernakulam</option>
                        <option value="Idukki">Idukki</option>
                        <option value="Kottayam">Kottayam</option>
                        <option value="Alappuzha">Alappuzha</option>
                        <option value="Pathanamthitta">Pathanamthitta</option>
                        <option value="Kollam">Kollam</option>
                        <option value="Thiruvanthapuram">Thiruvanthapuram</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Phone number <span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Phone number"
                    name="userPhno" required="">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Aadhar number</label>
                <input type="number" class="form-control" id="aadharno" placeholder="last four digit aadhar number"
                    name="aadharNo">
            </div>
            <h6 id="error1" class="text-danger" style="display: none;">Please enter 4 digit only !</h6>
            <div class="form-group">
                <label for="exampleInputPassword1">Pan card number</label>
                <input type="number" class="form-control" id="panno" placeholder="last four digit pan card number"
                    name="panNo">
            </div>
            <h6 id="error2" class="text-danger" style="display: none;">Please enter 4 digit only !</h6>
            <div class="form-group">
                <label for="exampleInputPassword1">Driving license number</label>
                <input type="number" class="form-control" id="drivingno"
                    placeholder="last four digit driving license number" name="drivingLicenseNo">
            </div>
            <h6 id="error3" class="text-danger" style="display: none;">Please enter 4 digit only !</h6>
            <button type="submit" class="btn btn-outline-primary btn-block">Submit</button>
            <div class="mt-3">
                <a href="/login">Already have an account ?</a>
            </div>
        </form>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
    crossorigin="anonymous"></script>

<script>
    $(document).ready(() => {

        $("#aadharno").blur(function () {
            var val1 = $('#aadharno').val()
            if (val1.length != 4) {
                $("#error1").show()
            } else {
                $("#error1").hide()
            }
        })

         $("#panno").blur(function () {
            var val2 = $('#panno').val()
            if (val2.length != 4) {
                $("#error2").show()
            } else {
                $("#error2").hide()
            }
        })

         $("#drivingno").blur(function () {
            var val3 = $('#drivingno').val()
            if (val3.length != 4) {
                $("#error3").show()
            } else {
                $("#error3").hide()
            }
        })

    })
</script>